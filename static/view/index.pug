    //- Basic
    section
      h2 Basic

      style.
        #basic {
          width: 800px;
          height: 450px;
        }

      #basic.swiper-container
        .swiper-wrapper
          .swiper-slide
            a.swiper-full-img(href="javascript:;")
              img(src='p1.jpg')
          .swiper-slide
            a.swiper-full-img(href="javascript:;")
              img(src='p2.jpg')
          .swiper-slide
            a.swiper-full-img(href="javascript:;")
              img(src='p3.jpg')
          .swiper-slide
            a.swiper-full-img(href="javascript:;")
              img(src='p4.jpg')
          .swiper-slide
            a.swiper-full-img(href="javascript:;")
              img(src='p5.jpg')

      script.
        new AwesomeSwiper()
          .init('#basic');


      a.code-button(href="https://github.com/cycdpo/awesome-swiper/blob/master/demo/basic.html", target="_blank") CODE

