doctype html
html(lang='en')
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no")
    title Awesome Swiper Demo
    base(href="./")

    //- webpack style
    each _style,index in htmlWebpackPlugin.files.css
      if index === 0
        link(href=_style, rel="stylesheet")

    style.
      h1, h2 {
        text-align: center;
      }

      .code-button {
        display: block;
        width: 100px;
        height: 30px;
        margin: 20px auto;

        line-height: 30px;
        text-align: center;
        text-decoration: none;
        font-weight: 700;
        color: #000;

        border: 1px solid black;
        border-radius: 4px;
      }

      hr{
        margin-bottom: 30px;
      }

  body
    h1 Awesome Swiper Demo
    hr

    each _js in htmlWebpackPlugin.files.js
      script(src=_js)

    h2 Basic

    style.
      #basic {
        width: 800px;
        height: 450px;
      }

    #basic.swiper-container
      .swiper-wrapper
        .swiper-slide
          a.swiper-full-img(href="javascript:;")
            img(src='p1.jpg')
        .swiper-slide
          a.swiper-full-img(href="javascript:;")
            img(src='p2.jpg')
        .swiper-slide
          a.swiper-full-img(href="javascript:;")
            img(src='p3.jpg')
        .swiper-slide
          a.swiper-full-img(href="javascript:;")
            img(src='p4.jpg')
        .swiper-slide
          a.swiper-full-img(href="javascript:;")
            img(src='p5.jpg')

    script.
      new AwesomeSwiper()
        .init('#basic');


    a.code-button(href="https://gist.github.com/cycjimmy/a21bfbc0781e6084dd130f85fe3059e2#file-basic-html") CODE

